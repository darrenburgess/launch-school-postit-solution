<%= render 'shared/errors', obj: @user %>

<%= form_for @user do |f| %>
  <div class="well">
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.submit 'Update Profile', class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

