<%= render 'shared/content_title', title: "Please log in" %>
<%= form_tag do %>
  <div class="well">
    <div class="control-group">
      <%= label_tag :username %>
      <%= text_field_tag :username, params[:username] || '' %>
    </div>
    <div class="control-group">
      <%= label_tag :password %>
      <%= password_field_tag :password, params[:passoword] || '' %>
    </div>
    <div class="control-group">
      <%= submit_tag "Log in", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>


