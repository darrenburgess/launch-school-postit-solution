<%= form_for @category do |f| %>
  <div class="well">
    <div class="control-group">
      <%= f.label :name %>
    </div>
    <div class="control-group">
      <%= f.text_field :name %>
    </div>
    <div class="control-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
