<% if logged_in? %>
  <p class="pull-right">[<%= link_to 'Edit this post', edit_post_path(@post) %>]</p>
<% end %>

<p>
  <%= render @post.categories %>
</p>

<%= render 'shared/content_title', title: @post.title %>

<p>
  <%= @post.description %>
</p>
</br>

<%= render 'shared/errors', obj: @comment %>

<% if logged_in? %>
  <%= render 'comments/form' %>
<% end %>

<h5>Comments:</h5>
<div class="row">
    <% @post.comments.reject(&:new_record?).each do |comment| %>
      <div class="well span8">
        <em><%= comment.body %></em>
        <br>
        <span class="quiet">by</span>
        <a><%= comment.author.username %></a>
        <small>at <%= friendly_date(comment.created_at) %></small>
      </div>
    <% end %>
</div>
