<%= render 'shared/errors', obj: @post %>

<%= form_for @post do |f| %>
  <div class="well">
    <div class="control-group">
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div class="control-group">
      <%= f.label :url %>
      <%= f.text_field :url %>
    </div>
    <div class="control-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 5 %>
    </div>
    <div class="control-group">
      <%= f.label :categories, "Categories" %>
      <%= collection_check_boxes :post, :category_ids, Category.all, :id, :name do |cb|  %>
        <%= cb.check_box class: 'checkbox' %>
        <%= cb.label class: 'checkbox inline' %>
      <% end %>
    </div>
    <div class="control-group">
      <%= f.submit class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>
